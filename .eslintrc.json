{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "prefer-const": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "react/display-name": "off",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "Literal[value='/api/users/profile']",
        "message": "'/api/users/profile' 경로는 금지됩니다. 대신 '/api/auth/me'를 사용하세요."
      }
    ]
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  }
}
